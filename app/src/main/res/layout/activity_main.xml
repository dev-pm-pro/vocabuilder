<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    style="@style/Layout"
    >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_logo"
            app:tint="@color/magentaBase"
            />
        <TextView
            android:id="@+id/userNameTxt"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="userLogin"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/cyanDarker"
            />
        <TextView
            android:id="@+id/emailTxt"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="user@email.com"
            android:textColor="@color/hint"
            android:textSize="15sp"
            />
        <ImageView
            android:contentDescription="@string/logout_text"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="-2dp"
            android:src="@drawable/ic_logout"
            app:tint="@color/hyperlink"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        />

    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/profileBtn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                android:contentDescription="@string/menu_profile_label"
                app:tint="@color/magentaDark" />

            <TextView
                android:id="@+id/profileLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_profile_label"
                android:textSize="15sp"
                android:textColor="@color/magentaDark"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsBtn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/settingsImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gear"
                android:contentDescription="@string/menu_settings_label"
                app:tint="@color/cyanDarker"
                />

            <TextView
                android:id="@+id/settingsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_settings_label"
                android:textSize="15sp"
                android:textColor="@color/cyanDarker"
                android:textStyle="normal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statsBtn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/statsImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chart"
                android:contentDescription="@string/menu_stats_label"
                app:tint="@color/cyanDarker"
                />

            <TextView
                android:id="@+id/statsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_stats_label"
                android:textSize="15sp"
                android:textColor="@color/cyanDarker"
                android:textStyle="normal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/decksBtn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/decksImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_deck"
                android:contentDescription="@string/menu_decks_label"
                app:tint="@color/cyanDarker"
                />

            <TextView
                android:id="@+id/decksLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_decks_label"
                android:textSize="15sp"
                android:textColor="@color/cyanDarker"
                android:textStyle="normal"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
