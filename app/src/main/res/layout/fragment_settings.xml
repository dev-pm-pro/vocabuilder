    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/avatarImg"
        android:layout_width="100dp"
