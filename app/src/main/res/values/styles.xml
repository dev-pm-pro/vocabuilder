<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopHeader">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">600</item>
    </style>
    <style name="BaseLabel">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="fontWeight">600</item>
    </style>
    <style name="FormLabel" parent="BaseLabel">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="BaseBox">
        <item name="android:ellipsize">end</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
    <style name="FormBox" parent="BaseBox">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="Layout">
        <item name="android:background">@color/baseLight</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>
